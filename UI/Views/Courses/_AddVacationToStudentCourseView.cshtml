@using Interfaces.ViewModels.Student
@model IAddVacationToStudentCourseViewModel

<p>ID Student: @Model.IdStudent</p>
<p>ID Course: @Model.IdCourse</p>

<form asp-action="AddVacationCoursePostAction" role="form">
    <div class="col-md-3">
            <div class="mt-2">
            <label asp-for="StartVacationDate"></label>
                <div>
                    <input class="form-control" asp-for="StartVacationDate"/>
                </div>    
            </div>

            <div class="mt-2">
            <label asp-for="EndVacationDate"></label>
                <div>
                    <input class="form-control" asp-for="EndVacationDate"/>
                </div>    
